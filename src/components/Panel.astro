---
export interface Props {
  title: string;
  body: string;
  target: string;
  icon?: string;
}

const { title, body, target } = Astro.props;
---

<a href={target}>
  <div class="rounded-md border border-primary p-4 transition hover:border-transparent hover:bg-violet-900" data-testid="panel">
    <small class="text-muted" data-testid="panel-title">{title}</small>
    <h3 class="text-xl font-bold" data-testid="panel-body">{body}</h3>
  </div>
</a>
