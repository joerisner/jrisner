---
import Head from '@components/base/Head.astro';
import Header from '@components/navigation/Header.astro';
import Footer from '@components/base/Footer.astro';
import Script from '@components/base/Script.astro';

export interface Props {
  title: string;
  description?: string;
  socialImage?: string;
  centerMainContent?: boolean;
}

const { title, description, socialImage, centerMainContent = false } = Astro.props;
const mainClasses = centerMainContent ? [] : ['mt-4', 'flex-grow', 'md:mt-8'];
---

<!doctype html>
<html lang="en" class="motion-safe:scroll-smooth">
  <head><Head title={title} description={description} socialImage={socialImage} /></head>
  <body class="overflow-x-hidden bg-black bg-gradient-to-b from-black to-slate-900 bg-cover font-primary text-default md:text-lg">
    <div class="mx-auto flex min-h-screen max-w-3xl flex-col justify-between gap-y-4 px-5 lg:max-w-4xl xl:max-w-5xl xl:px-0 2xl:max-w-6xl">
      <Header />
      <main class:list={['flex', 'flex-col', ...mainClasses]}>
        <slot />
      </main>
      <Footer />
    </div>
    <Script />
  </body>
</html>
