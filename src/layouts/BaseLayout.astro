---
import Head from '../components/Head.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  socialImage?: string;
}

const { title, description, socialImage } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="motion-safe:scroll-smooth">
  <Head title={title} description={description} socialImage={socialImage} />
  <body>
    <Header />
    <main class="container flex flex-col flex-grow lg:px-0 max-w-5xl mx-auto px-5">
      <slot />
    </main>
    <Footer />
  </body>
</html>
