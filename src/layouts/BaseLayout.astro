---
import Head from '../components/Head.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  socialImage?: string;
}

const { title, description, socialImage } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <Head title={title} description={description} socialImage={socialImage} />
  <body>
    <Header />
    <main class="container flex mx-auto flex-grow max-w-5xl">
      <slot />
    </main>
    <Footer />
  </body>
</html>
