---
import BaseLayout from '../layouts/BaseLayout.astro';
import HorizontalLine from '../components/HorizontalLine.astro';
import LargeHeading from '../components/typography/LargeHeading.astro';
import { SITE_TITLE } from '../config';
import Panel from '../components/Panel.astro';

const title = `Cheat Sheets | ${SITE_TITLE}`;
const cheatSheets = await Astro.glob('../pages/cheat-sheets/*.md');
---

<BaseLayout title={title}>
  <LargeHeading text="Cheat Sheets" />
  <HorizontalLine />
  <section class="my-4 grid gap-4 sm:grid-cols-2 md:my-6 lg:grid-cols-3 lg:gap-6">
    {cheatSheets.map((cheatSheet) => <Panel title="Cheat sheet" body={cheatSheet.frontmatter?.feature} target={String(cheatSheet.url)} />)}
  </section>
</BaseLayout>
