---
import BaseLayout from '../layouts/BaseLayout.astro';
import LinkButton from '../components/LinkButton.astro';
import { SITE_TITLE } from '../config';
---

<BaseLayout title={SITE_TITLE}>
  <section class="mb-8 text-center">
    <h1 class="mb-4 pl-1 tracking-wide text-muted">Hi there, I'm</h1>
    <h2 class="mb-4 bg-gradient-to-r from-primary to-secondary bg-clip-text text-6xl text-transparent md:text-8xl">
      Joseph Risner
    </h2>
    <p>I'm a software engineer who specializes in testing web apps</p>
  </section>
  <LinkButton href="/blog" text="View my latest blog articles" data-testid="blogLink" />
</BaseLayout>
