---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_TITLE } from '../config';
---

<BaseLayout title={SITE_TITLE}>
  <section class="text-center">
    <h1 class="tracking-wider mb-4 pl-1 text-muted">Hi there, I'm</h1>
    <h2 class="mb-4 text-6xl bg-clip-text text-transparent bg-gradient-to-r from-primary to-secondary md:text-8xl">
      Joseph Risner
    </h2>
    <p>I'm a software engineer who specializes in testing web apps</p>
  </section>
  <a
    href="/blog"
    class="outline outline-1 rounded text-primary mx-auto text-base px-2 py-1 mt-8 hover:bg-violet-900 hover:outline-none hover:text-default"
    data-testid="blogLink">View my latest blog articles</a
  >
</BaseLayout>
